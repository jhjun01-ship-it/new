    <script>
        // Chart.js 기본 설정 최적화
        Chart.defaults.font.family = 'Noto Sans KR';
        Chart.defaults.font.size = 11;
        Chart.defaults.responsive = true;
        Chart.defaults.maintainAspectRatio = false;

        // 압축된 데이터셋
        const chartData = {
            monthly: {
                labels: ['1월', '2월', '3월', '4월', '5월', '6월', '7월', '8월', '9월'],
                sales: [399, 588, 2833, 2816, 3372, 5164, 5994, 5611, 3544],
                voc: [11, 3, 0, 0, 0, 0, 1, 1, 0]
            },
            salesActivity: {
                labels: ['전화', 'MOH이메일', '이메일', '포기'],
                data: [22114, 7458, 548, 201],
                colors: ['#3B82F6', '#10B981', '#F59E0B', '#EF4444']
            },
            feedback: {
                data: [13523, 6213, 3703],
                colors: ['#10B981', '#F59E0B', '#EF4444']
            },
            dept: {
                data: [20113, 10163, 45],
                colors: ['#8B5CF6', '#10B981', '#F59E0B']
            },
            keywords: {
                labels: ['신청', '요청', '필요', '관심', '문의'],
                data: [90, 30, 25, 5, 2]
            },
            vocAction: {
                data: [14, 1, 1],
                colors: ['#3B82F6', '#F59E0B', '#EF4444']
            }
        };

        // 1. 월별 트렌드 (간소화된 라인 차트)
        new Chart(document.getElementById('monthlyTrendChart'), {
            type: 'line',
            data: {
                labels: chartData.monthly.labels,
                datasets: [{
                    label: '영업활동',
                    data: chartData.monthly.sales,
                    borderColor: '#3B82F6',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    tension: 0.4,
                    fill: true
                }, {
                    label: 'VOC매핑',
                    data: chartData.monthly.voc,
                    borderColor: '#10B981',
                    backgroundColor: 'rgba(16, 185, 129, 0.1)',
                    tension: 0.4,
                    fill: false
                }]
            },
            options: {
                plugins: { legend: { position: 'top', labels: { boxWidth: 12 } } },
                scales: {
                    y: { beginAtZero: true },
                    x: { grid: { display: false } }
                },
                elements: { point: { radius: 3 } }
            }
        });

        // 2. 영업 활동 (Doughnut으로 변경)
        new Chart(document.getElementById('salesActivityChart'), {
            type: 'doughnut',
            data: {
                labels: chartData.salesActivity.labels,
                datasets: [{
                    data: chartData.salesActivity.data,
                    backgroundColor: chartData.salesActivity.colors,
                    borderWidth: 0
                }]
            },
            options: {
                plugins: {
                    legend: { position: 'right', labels: { boxWidth: 12 } }
                },
                cutout: '50%'
            }
        });

        // 3. 고객 반응 (간소화된 파이)
        new Chart(document.getElementById('customerFeedbackChart'), {
            type: 'pie',
            data: {
                labels: ['긍정', '보류', '부정'],
                datasets: [{
                    data: chartData.feedback.data,
                    backgroundColor: chartData.feedback.colors,
                    borderWidth: 0
                }]
            },
            options: {
                plugins: { legend: { display: false } }
            }
        });

        // 4. 부서별 활동 (간소화된 파이)
        new Chart(document.getElementById('deptActivityChart'), {
            type: 'pie',
            data: {
                labels: ['MI', 'FGS', 'PBT'],
                datasets: [{
                    data: chartData.dept.data,
                    backgroundColor: chartData.dept.colors,
                    borderWidth: 0
                }]
            },
            options: {
                plugins: { legend: { display: false } }
            }
        });

        // 5. VOC 키워드 (수평 바)
        new Chart(document.getElementById('vocKeywordsChart'), {
            type: 'bar',
            data: {
                labels: chartData.keywords.labels,
                datasets: [{
                    data: chartData.keywords.data,
                    backgroundColor: ['#3B82F6', '#10B981', '#F59E0B', '#8B5CF6', '#EF4444']
                }]
            },
            options: {
                indexAxis: 'y',
                plugins: { legend: { display: false } },
                scales: {
                    x: { beginAtZero: true, grid: { display: false } },
                    y: { grid: { display: false } }
                }
            }
        });

        // 6. VOC Action (간소화된 도넛)
        new Chart(document.getElementById('vocToActionChart'), {
            type: 'doughnut',
            data: {
                labels: ['CALL', 'EMAIL', 'DROP'],
                datasets: [{
                    data: chartData.vocAction.data,
                    backgroundColor: chartData.vocAction.colors,
                    borderWidth: 0
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                cutout: '60%'
            }
        });

        // 페이지 로딩 최적화
        document.addEventListener('DOMContentLoaded', function() {
            // 모든 차트 컨테이너에 로딩 완료 표시
            document.querySelectorAll('.lazy-load').forEach(el => {
                el.classList.add('loaded');
            });
        });
    </script>

</body>
